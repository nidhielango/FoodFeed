<% include ../partials/header %>
    <div class ="container">
        <div class="row"></div>
            <h1 style="text-align:center;">Add a new Recipe</h1>
            <div style="width:90%; margin:20px auto;">
                <!-- POST REQUEST which will use the post route defined in app.js -->
                <form action="/recipes" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="description">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="ingredients" placeholder="ingredients">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="directions" placeholder="directions">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image url">
                    </div>
                    <div class="form-group">
                        <button class = "btn btn-lg btn-dark btn-block">Submit!</button>
                    </div>
                
                    <a href="/recipes">View all Recipes</a>
                </form>
            </div>
        </div> 
    </div>


